#!/bin/bash

# Copy files for PXE
cp /usr/lib/PXELINUX/pxelinux.0        ${TFTPBOOT_DIR}/ &&
cp /usr/lib/PXELINUX/lpxelinux.0     ${TFTPBOOT_DIR}/ &&
cp /usr/lib/syslinux/modules/bios/reboot.c32        ${TFTPBOOT_DIR}/ &&
cp /usr/lib/syslinux/modules/bios/libutil.c32        ${TFTPBOOT_DIR}/ &&
cp /usr/lib/syslinux/modules/bios/libcom32.c32        ${TFTPBOOT_DIR}/ &&
cp /usr/lib/syslinux/modules/bios/vesamenu.c32      ${TFTPBOOT_DIR}/
cp /usr/lib/syslinux/modules/bios/ldlinux.c32      ${TFTPBOOT_DIR}/
